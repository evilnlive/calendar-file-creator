@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <form method="post">
        <div class="form-group">
            <label asp-for="Schedule.StartDate" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input type="date" asp-for="Schedule.StartDate" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Schedule.EndDate" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input type="date" asp-for="Schedule.EndDate" />
            </div>
        </div>

        <table class="table">
            @{
            var weekIndex = 0;
            }
            @foreach (var week in Model.Schedule.Weeks)
            {
            var dayIndex = 0;

            <tr>
                <td>
                    @(weekIndex + 1)
                </td>
                @foreach (var day in week.Days)
                {
                <td>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <input asp-for="Schedule.Weeks[weekIndex].Days[dayIndex].From" />
                            <input asp-for="Schedule.Weeks[weekIndex].Days[dayIndex].Until" />
                        </div>
                    </div>
                </td>

                dayIndex++;
                }
            </tr>

            weekIndex++;
            }
            <tr>
                <td><button asp-page-handler="AddWeek" class="btn btn-link">Lägg till vecka</button></td>
            </tr>
        </table>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Generera kalenderfil</button>
            </div>
        </div>
    </form>
</div>
